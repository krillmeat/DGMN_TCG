.card-text .main-info{
  position: absolute;
  left: 1.3em;
  width: calc(100% - 2.9em);
  
  top: 27.7em;
  /* background: pink; height: 1em; */
}

  .card-text .main-info.shifted-up{ top: 26.9em }
  .card-text .main-info.shifted-down{ top: 31.89em }

.card-text .main-info .card-name{
  position: absolute;
  font-family: "adelle-sans-condensed", sans-serif;
  font-weight: 700;
  text-align: center;

  top: 0em;
  width: calc(100% - .7em);
  left: .7em;
  font-size: 1.6em;
  color: #FFF;
  letter-spacing: .05em;
}

  .card-text .main-info .card-name.center{ width: 100%; left: 0 }
  .card-text .main-info .card-name.align-bottom{ top: .1em }
  .card-text .main-info .card-name.black{ color: #000 }
  .card-text .main-info .card-name.black-and-white{ color: #FFF; -webkit-text-stroke: 1px #000 }

  .card-text .main-info .card-name.name-cnd-4{ letter-spacing: -.05em; font-size: 1.5em }
  .card-text .main-info .card-name.name-cnd-5{ letter-spacing: -.05em; transform: scaleX(.9) }
  .card-text .main-info .card-name.name-cnd-6{ letter-spacing: -.06em; transform: scaleX(.8) }
  .card-text .main-info .card-name.name-cnd-7{ letter-spacing: -.07em; transform: scaleX(.8) }

.card-text .main-info .set-no{
  position: absolute;
  top: -.0115em;
  font-family: "adelle-sans-condensed", sans-serif;
  font-weight: 600;
  font-size: .7em;
  letter-spacing: .1em;
  
  right: 1.8em;
  color: #FFF;
}

  .card-text .main-info .set-no.black{ color: #000 }
  .card-text .main-info .set-no.sec-rarity{ right: 2.4em }

.card-text .main-info .dgmn-lv{
  position: absolute;
  left: .3em;
  font-family: "Squada One", sans-serif;
  font-size: 2em;

  top: 0;
  color: #FFF;
  -webkit-text-stroke: 1px #000;
}

  .card-text .main-info .dgmn-lv.white{ color: #000; -webkit-text-stroke: 0 }
  .card-text .main-info .dgmn-lv > span{ font-size: .7em }

.card-text .main-info ul.small-info{
  position: absolute;
  top: 1.65em; right: 0em;
  display: flex;
  font-family: "adelle-sans-condensed",sans-serif;
  letter-spacing: .05em;

  color: #FFF;
}

.card-text .main-info ul.small-info li{
  font-size: .5em;
  padding: 0 1.4em;
  border-left: 1px solid #FFF;
}

.card-text .main-info ul.small-info li:first-of-type{ border-left: none }
